<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="700.0" minWidth="1200.0"
  prefHeight="800.0" prefWidth="1200.0" stylesheets="@../skin/bootstrap3.css"
  xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="zjtech.modules.home.HomeController">

  <fx:define>
    <fx:include fx:id="nav_pic" source="pic/nav.fxml"/>
    <fx:include fx:id="pic_global_setting" source="pic/global_setting.fxml"/>
    <fx:include fx:id="feature_list" source="feature_list.fxml"/>
  </fx:define>

  <top>
    <VBox prefHeight="108.0" BorderPane.alignment="CENTER">
      <children>
        <HBox alignment="CENTER_LEFT" prefHeight="67.0" style="-fx-background-color: #6B95EE;">
          <children>
            <Label prefWidth="308.0" text="My Tools" textFill="WHITE">
              <font>
                <Font name="System Bold" size="39.0"/>
              </font>
              <opaqueInsets>
                <Insets/>
              </opaqueInsets>
            </Label>
            <StackPane alignment="CENTER_RIGHT" prefHeight="67.0" prefWidth="608.0"
              HBox.hgrow="ALWAYS">
              <HBox.margin>
                <Insets right="10.0"/>
              </HBox.margin>
              <children>
                <Button mnemonicParsing="false" onAction="#logout" text="Logout">
                  <styleClass>
                    <String fx:value="info"/>
                    <String fx:value="action-btn"/>
                  </styleClass>
                  <StackPane.margin>
                    <Insets right="10.0"/>
                  </StackPane.margin>
                </Button>
              </children>
            </StackPane>
          </children>
          <padding>
            <Insets left="20.0"/>
          </padding>
        </HBox>
        <StackPane children="$feature_list" prefHeight="51.0">
        </StackPane>
      </children>
    </VBox>
  </top>
  <center>
    <StackPane>
      <SplitPane fx:id="mainContentPane" dividerPositions="0.1" prefHeight="160.0" prefWidth="200.0"
        BorderPane.alignment="TOP_LEFT">
        <items>
          <AnchorPane fx:id="navPane">

          </AnchorPane>
          <AnchorPane fx:id="contentPane">

          </AnchorPane>
        </items>
      </SplitPane>
    </StackPane>
  </center>
  <bottom>
    <TextArea fx:id="textArea" editable="false" focusTraversable="true" prefHeight="141.0"
      BorderPane.alignment="CENTER"/>
  </bottom>

</BorderPane>
