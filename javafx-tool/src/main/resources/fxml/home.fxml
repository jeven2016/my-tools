<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="900.0"
  minWidth="1600.0"
  prefHeight="900.0" prefWidth="1600.0" stylesheets="@../skin/bootstrap3.css"
  xmlns="http://javafx.com/javafx/8.0.121" fx:controller="zjtech.modules.home.HomeController">

  <fx:define>
    <fx:include source="pic/nav.fxml" fx:id="nav_pic"/>
    <fx:include source="pic/global_setting.fxml" fx:id="pic_global_setting"/>
    <fx:include source="feature_list.fxml" fx:id="feature_list"/>
  </fx:define>

  <top>
    <VBox BorderPane.alignment="CENTER" prefHeight="108.0" prefWidth="1600.0">
      <children>
        <HBox style="-fx-background-color: #6B95EE;" alignment="CENTER_LEFT" prefHeight="67.0">
          <children>
            <Label prefWidth="308.0" text="My Tools" textFill="WHITE">
              <font>
                <Font name="System Bold" size="39.0"/>
              </font>
              <opaqueInsets>
                <Insets/>
              </opaqueInsets>
            </Label>
            <StackPane HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT" prefHeight="67.0"
              prefWidth="608.0">
              <HBox.margin>
                <Insets right="10.0"/>
              </HBox.margin>
              <children>
                <Button mnemonicParsing="false" onAction="#logout" text="Logout">
                  <styleClass>
                    <String fx:value="info"/>
                    <String fx:value="action-btn"/>
                  </styleClass>
                  <StackPane.margin>
                    <Insets right="10.0"/>
                  </StackPane.margin>
                </Button>
              </children>
            </StackPane>
          </children>
          <padding>
            <Insets left="20.0"/>
          </padding>
        </HBox>
        <StackPane children="$feature_list" prefHeight="51.0" prefWidth="1600.0">
        </StackPane>
      </children>
    </VBox>
  </top>
  <center>
    <StackPane>
      <SplitPane BorderPane.alignment="TOP_LEFT" dividerPositions="0.1" prefHeight="160.0"
        prefWidth="200.0" fx:id="mainContentPane">
        <items>
          <AnchorPane fx:id="navPane">
            <children></children>
          </AnchorPane>
          <AnchorPane fx:id="contentPane">
            <children></children>
          </AnchorPane>
        </items>
      </SplitPane>
    </StackPane>
  </center>
</BorderPane>
